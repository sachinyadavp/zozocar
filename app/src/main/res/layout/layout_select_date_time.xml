<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/city_bg"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:id="@+id/back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="When you are going"
            android:textColor="@color/textcolor"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:soundEffectsEnabled="true"

        android:layout_weight="0.4"
        app:mcv_allowClickDaysOutsideCurrentMonth="false"
        app:mcv_showOtherDates="none"
        app:mcv_selectionColor="@color/colorPrimaryDark"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <View

            android:background="#a3a3a3"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <!--<view-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2dp"-->
            <!--android:background="@color/textcolor"/>-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_time_slots"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        <!--<view-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2dp"-->
            <!--android:background="@color/textcolor"/>-->
        <View

            android:background="#a3a3a3"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:id="@+id/ll_proceed"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/tv_proceed"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textAlignment="center"
            android:background="@drawable/action_bg"
            android:layout_width="200dp"
            android:layout_marginRight="10dp"
            android:text="proceed"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>