<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/city_bg"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:id="@+id/back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="Add car Details  "
            android:textColor="@color/textcolor"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Chating"
            android:layout_weight="0.0"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="10dp"
android:id="@+id/iv_chat1"
            android:layout_weight="0.25"

            android:layout_width="0dp"
            android:padding="10dp"
            android:background="@drawable/preference_bg"
            android:src="@drawable/chat1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_margin="10dp"
android:id="@+id/iv_chat2"
            android:layout_weight="0.25"
            android:padding="10dp"
            android:background="@drawable/select_preferences_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/chat2"
            />
        <ImageView
            android:padding="10dp"
            android:layout_weight="0.25"
            android:background="@drawable/preference_bg"
            android:id="@+id/iv_chat3"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:src="@drawable/chat3"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <TextView
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:text="Smoking"
            android:layout_weight="0.0"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
android:id="@+id/iv_smoking1"
            android:layout_weight="0.25"
            android:padding="10dp"
            android:background="@drawable/select_preferences_bg"
            android:src="@drawable/smoking1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_weight="0.25"
            android:background="@drawable/preference_bg"
           android:id="@+id/iv_smoking2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/smoking2"
            />
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:padding="10dp"
            android:background="@drawable/preference_bg"
android:id="@+id/iv_smoking3"
            android:src="@drawable/smoking3"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="Pets       "
            android:textSize="18dp"
            android:layout_weight="0."
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="10dp"
android:id="@+id/iv_pet1"
            android:padding="10dp"
            android:layout_weight="0.25"
            android:background="@drawable/preference_bg"
            android:src="@drawable/pets1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_margin="10dp"
android:id="@+id/iv_pet2"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:padding="10dp"
            android:background="@drawable/select_preferences_bg"
            android:layout_height="wrap_content"
            android:src="@drawable/pets2"
            />
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="0dp"
android:id="@+id/iv_pet3"
            android:layout_weight="0.25"
            android:padding="10dp"
            android:background="@drawable/preference_bg"
            android:src="@drawable/pets3"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <TextView
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:text="Music    "
            android:layout_weight="0.0"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
android:id="@+id/iv_music1"
            android:layout_weight="0.25"
            android:src="@drawable/music1"
            android:padding="10dp"
            android:background="@drawable/select_preferences_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_margin="10dp"
android:id="@+id/iv_music2"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_weight="0.25"
            android:background="@drawable/preference_bg"
            android:layout_height="wrap_content"
            android:src="@drawable/music2"
            />
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_weight="0.25"
            android:background="@drawable/preference_bg"
android:id="@+id/iv_music3"
            android:src="@drawable/music3"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="40dp"
        android:id="@+id/ll_save"
        android:background="@drawable/action_bg"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Save"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>