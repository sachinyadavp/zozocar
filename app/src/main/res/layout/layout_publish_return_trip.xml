<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/city_bg"
    >
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:id="@+id/back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"

            android:text="PICK UP"
            android:textColor="@color/textcolor"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:src="@drawable/open_car"
        android:layout_weight=".15"
        android:layout_height="0dp" />
    <TextView
        android:layout_width="wrap_content"

        android:layout_marginTop="20dp" android:text="Coming back as well?\nPublish your return trip now!
"
        android:textSize="20dp"
        android:gravity="center_horizontal"

        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_height="0dp">

        <TextView
            android:paddingBottom="8dp"
            android:paddingTop="8dp"

            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@drawable/action_bg"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:text="YEAH, SURE!"
            android:textAllCaps="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_marginLeft="20dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"

            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@drawable/action_bg"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:text="NO, Iâ€™LL"
            android:layout_centerHorizontal="true"

            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="14dp"

            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>