<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.EditProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/profile_bg"
          >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
             android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="27dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/left_arrow"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                   android:textStyle="bold"
                    android:text="Edit profile"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingRight="27dp"
                    android:id="@+id/tv_header"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />
            </LinearLayout>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp"
                    android:id="@+id/tv_logout"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:textAlignment="textEnd"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"/>
            </RelativeLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
         android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.7">
          <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="50dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
              <android.support.design.widget.TextInputLayout
                  android:layout_centerVertical="true"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:layout_alignLeft="@id/iv_location"
                  android:layout_marginRight="45dp">
                  <EditText
                      android:focusableInTouchMode="false"
                      android:imeOptions="actionSearch"
                      android:id="@+id/et_name"
                      android:layout_centerVertical="true"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_alignLeft="@id/iv_location"
                      android:textSize="15dp"
                      android:background="@null"
                      android:hint="Name"
                      android:text="sachin"
                      android:gravity="left" >
                  </EditText>
              </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#a3a3a3"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignLeft="@id/iv_location"
                    android:layout_marginRight="45dp">
                    <TextView
                        android:imeOptions="actionSearch"
                        android:id="@+id/tv_gender"
                        android:layout_centerVertical="true"
                        android:text="Male"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/iv_location"
                        android:textSize="15dp"
                        android:background="@null"
                        android:hint="Gender"
                        android:gravity="left" >
                    </TextView>
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#a3a3a3"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignLeft="@id/iv_location"
                    android:layout_marginRight="45dp">
                    <TextView
                        android:text="20/10/19"
                        android:imeOptions="actionSearch"
                        android:id="@+id/tv_dob"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/iv_location"
                        android:textSize="15dp"
                        android:background="@null"
                        android:hint="Date of Birth"
                        android:gravity="left" >
                    </TextView>
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#a3a3a3"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignLeft="@id/iv_location"
                    android:layout_marginRight="45dp">
                    <EditText
                        android:imeOptions="actionSearch"
                        android:id="@+id/et_phone"
                        android:editable="false"
                        android:layout_centerVertical="true"
                        android:text="8299208430"
                        android:maxLength="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/iv_location"
                        android:textSize="15dp"
                        android:background="@null"
                        android:inputType="phone"
                        android:hint="Mobile"
                        android:gravity="left" >
                    </EditText>
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/warning"
                    android:layout_height="20dp" />
            </RelativeLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#a3a3a3"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignLeft="@id/iv_location"
                    android:layout_marginRight="45dp">
                    <EditText
                        android:id="@+id/et_gmail"
                        android:editable="false"
                        android:layout_centerVertical="true"
android:text="sy433029@gmail.com"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/iv_location"
                        android:textSize="15dp"
                        android:background="@null"
                        android:hint="Gmail"
                        android:gravity="left" >
                    </EditText>
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/warning"
                    android:layout_height="20dp" />
            </RelativeLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#a3a3a3"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:passwordToggleEnabled="true"
                    android:layout_alignLeft="@id/iv_location"
                   >
                    <EditText
                        android:layout_gravity="center_vertical"
                        android:editable="false"
                        android:inputType="textPassword"
                        android:text="gyudjhddd"
                        android:imeOptions="actionSearch"
                        android:id="@+id/et_password"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/iv_location"
                        android:textSize="15dp"
                        android:background="@null"
                        android:hint="Password"
                        android:gravity="left" >
                    </EditText>
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#a3a3a3"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/action_bg"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="SAVE CHANGES"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:padding="2dp"
        android:gravity="center">
        <RelativeLayout
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center_horizontal"
            android:id="@+id/rl_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:gravity="center"
            android:background="@drawable/circular_bg"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:id="@+id/iv_profile"
                android:src="@drawable/userimg" />
            <LinearLayout
                android:id="@+id/ll_update"
                android:layout_width="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_height="30dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/profile_edit_icon" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>